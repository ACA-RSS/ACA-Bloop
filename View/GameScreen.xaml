<Window x:Class="Twisted_Treeline.GameScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Twisted_Treeline"
        mc:Ignorable="d"
        Title="GameScreen" Height="600" Width="800" Loaded="Window_Loaded" KeyUp="Window_KeyUp">
    <Grid x:Name="World_Grid" HorizontalAlignment="Center">
        <Button x:Name="btnMenu" Content="Menu" HorizontalAlignment="Left" Margin="563,10,0,0" VerticalAlignment="Top" Width="75" Click="btnMenu_Click"/>
        <TextBlock x:Name="txtHealth" HorizontalAlignment="Left" Margin="188,10,0,0" TextWrapping="Wrap" Text="Health Bar" VerticalAlignment="Top"/>
        <Image x:Name="imgStars" HorizontalAlignment="Left" Margin="436,10,0,0" VerticalAlignment="Top" Width=" 80"/>
        <TextBlock x:Name="txtPoints" HorizontalAlignment="Left" Margin="315,10,0,0" TextWrapping="Wrap" Text="Points" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtLevel" HorizontalAlignment="Left" Margin="71,10,0,0" TextWrapping="Wrap" Text="Level 1" VerticalAlignment="Top"/>
        <Canvas x:Name="WorldCanvas" HorizontalAlignment="Center" Width="772" Height="525" Margin="0,35,0,10" Background="YellowGreen" >
        </Canvas>
    </Grid>
</Window>
