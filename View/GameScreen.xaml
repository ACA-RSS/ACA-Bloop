<Window x:Class="Twisted_Treeline.GameScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Twisted_Treeline"
        mc:Ignorable="d"
        Title="GameScreen" Height="500" Width="700" Loaded="Window_Loaded">
    <Grid x:Name="World_Grid" KeyUp="Window_KeyUp" >
        <Button x:Name="btnMenu" Content="Menu" HorizontalAlignment="Left" Margin="563,10,0,0" VerticalAlignment="Top" Width="75" Click="btnMenu_Click"/>
        <TextBlock x:Name="txtHealth" HorizontalAlignment="Left" Margin="188,10,0,0" TextWrapping="Wrap" Text="Health Bar" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtStars" HorizontalAlignment="Left" Margin="436,10,0,0" TextWrapping="Wrap" Text="Stars" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtPoints" HorizontalAlignment="Left" Margin="315,10,0,0" TextWrapping="Wrap" Text="Points" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtLevel" HorizontalAlignment="Left" Margin="71,10,0,0" TextWrapping="Wrap" Text="Level Indicator" VerticalAlignment="Top"/>
        <Canvas x:Name="WorldCanvas" HorizontalAlignment="Left" Width="672" Margin="10,35,0,10" Background="LightGreen" >
        </Canvas>
    </Grid>
</Window>
