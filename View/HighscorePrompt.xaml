<Window x:Class="Twisted_Treeline.View.HighscorePrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Twisted_Treeline.View"
        mc:Ignorable="d"
        Title="HighscorePrompt" Height="300" Width="300" Background="DarkSlateGray">
    <Grid>
        <TextBlock x:Name="ScoreTitle" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,15,0,0" Height="40" Width="227" Text="YOU WON" Foreground="Goldenrod" FontWeight="Bold" FontSize="30"/>
        <TextBlock x:Name="Score" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0" Height="30" Width="120" Text="" TextAlignment="Center" Foreground="Goldenrod" FontSize="15" />
        <TextBox x:Name="Name" Text="Your name here" HorizontalAlignment="Center" Margin="0,40,0,0" Height="30" Width="100" />
        <Button x:Name="Submit" Click="Submit_Click" Content="Submit" Height="30" Width="100" HorizontalAlignment="Center" Margin="0,150,0,0"/>
    </Grid>
</Window>
