<Window x:Class="Twisted_Treeline.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Twisted_Treeline"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1300" Background="Black">
    <Grid>
        <Image x:Name="imgTitle" HorizontalAlignment="Center" Height="118" VerticalAlignment="Top" Width="817" Source="Graphics/TTLine.png" Grid.Column="1" Margin="29.2,0,0,0"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Difficulty Level:" FontSize ="15" Foreground="White" VerticalAlignment="Top" Grid.Column="1" Margin="0,180,0,0" Height="22" Width="120"/>
        <ComboBox x:Name="DifficultyLstBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Grid.Column="1" Margin="300,180,0,0" SelectionChanged="DifficultyLstBox_SelectionChanged"/>
        <Button x:Name="btnLoad" Content="Load Old Game" HorizontalAlignment="Center" Margin="0,477,0,0" VerticalAlignment="Top" Width="100" Height="30"/>
        <Button x:Name="btnNewGame" Content="Start New Game" HorizontalAlignment="Center" Margin="0,385,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="btnNewGame_Click"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Center" Height="23" Margin="0,288,0,0" TextWrapping="Wrap" Text="Enter Your Username" VerticalAlignment="Top" Width="150"/>
    </Grid>
</Window>
